    def collect_item_dets(self):
        pass
    def save_to_dict(self):
        pass
    def re_sort_dict(self):
        pass

class removing(object):
    def collect_item_name(self):
        pass
    def check_item_valid(self):
        pass
    def remove_item(self):
        pass

class displaying
    def print_all_items(self):
        pass
